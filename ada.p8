pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
car={x=64, y=30}
bullets = {}

function fire()
  if (btnp(4)) then
    local b = {
      x = car.x,
      y = car.y,
      dx = 3
    }
    add(bullets, b)
    sfx(3)    
  end
end

function move_bullets()
  for b in all(bullets) do
    b.x += b.dx
    if (b.x > 127) then
      del(bullets, b)
    end
  end
end

function move_car()
  if (btn(0)) then 
    car.x=car.x-1
    if (car.x < 0) then
      car.x=0
    end   
  end
  if (btn(1)) then 
  	car.x=car.x+1
  	if (car.x > 127) then
  	  car.x = 0
  	end 
  end
  if (btn(2)) then   	
  	car.y=car.y-1 
  	if (car.y < 22) then
  	  car.y = 22
  	  sfx(0)
  	end
  end
  if (btn(3)) then 
    car.y=car.y+1
    if (car.y > 40) then
      car.y = 40
      sfx(0)
    end 
  end
end

function _update()
  fire()
  move_car()
  move_bullets()
end

function _draw()
  cls()
  map()
  spr(1,car.x,car.y)
  for b in all(bullets) do
    spr(5, b.x, b.y)
  end
end

